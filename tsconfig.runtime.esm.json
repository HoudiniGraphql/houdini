{
	"include": ["src/runtime/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"],
	"compilerOptions": {
		"outDir": "build/runtime-esm",
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["es2021", "dom"],
		"target": "es2019",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": false,
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"strict": true
	}
}
