{
	"exclude": ["node_modules"],
	"include": ["packages/**/*.ts"],
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["ES2021", "DOM", "ES2021.String"],
		"target": "ESNext",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": false,
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"downlevelIteration": true,
		"emitDeclarationOnly": true,
		"baseUrl": "./packages/houdini",
		"paths": {
			"$houdini": ["../houdini/src"],
			"$houdini/*": ["../houdini/src/*"],
			"HOUDINI_CLIENT_PATH": ["../../e2e/sveltekit/src/client"]
		}
	}
}
