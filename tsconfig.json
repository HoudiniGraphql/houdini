{
	"exclude": ["node_modules"],
	"include": [
		"packages/**/*.ts",
		"packages/houdini-react/src/runtime/context.tsx",
		"packages/houdini-router/src/runtime/router.tsx"
	],
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2020",
		"lib": ["ES2021", "DOM", "ES2021.String"],
		"target": "ESNext",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": false,
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"downlevelIteration": true,
		"emitDeclarationOnly": true,
		"baseUrl": "./packages/houdini",
		"paths": {
			"$houdini": ["../houdini/src"],
			"$houdini/*": ["../houdini/src/*"]
		},
		"jsx": "react"
	}
}
